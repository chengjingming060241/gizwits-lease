        </triggeringPolicy>
    </appender>


    <!-- 用户日志 -->
    <appender name="USER_LOG_APPENDER"  class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
